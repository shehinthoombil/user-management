<% include('../layouts/header.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" 
integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


<div class="container mt-5"> <!-- Add Bootstrap container class for center alignment -->
    <div class="profile-container">
        <div class="centered-content">
            <div class="profile-image">
                <img src="userImages/<%= user.image %>" width="100px" height="100px" alt="<%= user.image %>">
            </div>    
            <div class="profile-form">
                <form action="" method="post" enctype="multipart/form-data">

                    <!-- Add Bootstrap form-control class for styling -->
                    <input type="file" name="image" class="form-control">
                    <input type="hidden" name="user_id" value="<%= user._id %>">
                    <br><br>
                    <input type="text" name="name" value="<%= user.name %>" placeholder="Enter name" class="form-control" required>
                    <br><br>
                    <input type="text" name="email" value="<%= user.email %>" placeholder="Enter Email" class="form-control" required>
                    <br><br>
                    <input type="text" name="mno" value="<%= user.mobile %>" placeholder="Enter Mobile" class="form-control" required>
                    <br><br>
                    <input type="submit" value="Update Profile" class="btn btn-primary">

                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body{
        background-color: rgb(106, 194, 59);
    }
</style>
<%- include('../layouts/footer') %>
